extends ./layouts/layout.pug

block title
  title Dashboard

block content
  .h-full.grid.grid-cols-12.grid-rows-12
    .row-span-1.col-start-2.col-span-10.self-end
      h1.text-white.text-lg.font-semibold.mb-2 Devices
    .row-span-10.col-start-2.col-span-10
      table.table-auto.w-full.bg-white.text-sm.border.border-slate-400(class='dark:bg-slate-800 dark:border-slate-500')
        thead.font-semibold.text-slate-900.bg-slate-50(class='dark:text-slate-200 dark:bg-slate-700')
          tr.divide-x.divide-slate-300.border-b.border-slate-300(class='dark:divide-slate-600 dark:border-slate-600')
            th.p-1 Location
            th.p-1 Device identifier
            th.p-1 ICCID
            th.p-1 MSISDN
            th.p-1 Connection
            th.p-1 Last connection date
            th.p-1 Data usage
        tbody.text-slate-500.divide-y.divide-slate-300(class='dark:text-slate-400 dark:divide-slate-700')
          tr.divide-x.divide-slate-300(class='dark:divide-slate-700')
            td.p-1 Home
            td.p-1 123412341234123
            td.p-1 56785678567856785678
            td.p-1 89089089089
            td.p-1 Disconnected
            td.p-1 10/04/2023 02:12:03 PM
